{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "types": [
      "vitest/globals",
    ],
    "paths": {
      "@entities": [
        "./lib/entities"
      ],
      "@utils": [
        "./lib/utils"
      ],
      "@types": [
        "./lib/models/types"
      ],
      "@constants": [
        "./lib/models/constants"
      ],
      "@enums": [
        "./lib/models/enums"
      ],
    },
  },
  "include": [ "lib" ]
}
