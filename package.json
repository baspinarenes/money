{
  "name": "@enesbaspinar/money",
  "version": "4.4.1",
  "description": "A comprehensive library for precise monetary calculations and customizable locale-based currency formatting.",
  "author": "Enes Başpınar <ensbaspinar@gmail.com>",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "money",
    "price",
    "currency",
    "monetary",
    "calculation",
    "formatting",
    "decimal",
    "decimal.js-light",
    "intl",
    "typescript",
    "lightweight",
    "ecommerce",
    "finance",
    "zero-config"
  ],
  "homepage": "https://github.com/baspinarenes/money",
  "repository": {
    "type": "git",
    "url": "https://github.com/baspinarenes/money.git"
  },
  "bugs": {
    "url": "https://github.com/baspinarenes/money/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "decimal.js-light": "^2.5.1"
  }
}
