{
  "name": "@enesbaspinar/money",
  "version": "4.0.0",
  "description": "A comprehensive library for precise monetary calculations and customizable locale-based currency formatting.",
  "author": "Enes Başpınar <ensbaspinar@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "money",
    "price",
    "currency",
    "monetary",
    "calculation",
    "formatting",
    "big.js",
    "intl",
    "typescript",
    "ecommerce",
    "finance"
  ],
  "homepage": "https://github.com/baspinarenes/money",
  "repository": {
    "type": "git",
    "url": "https://github.com/baspinarenes/money.git"
  },
  "bugs": {
    "url": "https://github.com/baspinarenes/money/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "dependencies": {
    "big.js": "^6.2.1"
  },
  "devDependencies": {
    "@types/big.js": "^6.2.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
